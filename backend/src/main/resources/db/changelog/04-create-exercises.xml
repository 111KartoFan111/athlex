<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="04-create-exercises" author="athlex">
        <createTable tableName="exercises">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="workout_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="title" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="TEXT"/>
            <column name="video_url" type="VARCHAR(500)"/>
            <column name="target_muscle_group" type="VARCHAR(100)"/>
            <column name="reps" type="INT"/>
        </createTable>

        <addForeignKeyConstraint baseTableName="exercises" baseColumnNames="workout_id"
                                 constraintName="fk_exercises_workout"
                                 referencedTableName="workouts" referencedColumnNames="id"
                                 onDelete="CASCADE"/>
    </changeSet>

</databaseChangeLog>
