<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="03-create-workouts" author="athlex">
        <createTable tableName="workouts">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="sport_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="title" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="duration_min" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="calories" type="INT"/>
            <column name="level" type="VARCHAR(50)"/>
            <column name="equipment_needed" type="VARCHAR(255)"/>
            <column name="is_ai_generated" type="BOOLEAN" defaultValueBoolean="false"/>
        </createTable>

        <addForeignKeyConstraint baseTableName="workouts" baseColumnNames="sport_id"
                                 constraintName="fk_workouts_sport"
                                 referencedTableName="sports" referencedColumnNames="id"/>
    </changeSet>

</databaseChangeLog>
